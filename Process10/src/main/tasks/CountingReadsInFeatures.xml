<?xml version="1.0" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/workflow/task"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/workflow/task http://uk-cri-lbio01/schema/workflow/task-1.4.xsd">

    <name>CountingReadsInFeatures</name>
    <description>Wig histogram for ChIPseqPipeline.</description>

    <program type="commandLine">
        <executable>
		export R_LIBS=${rlibs}
		${rexec} ${pipelineBase}/RScripts/CountingInFeatures.r ${genepos} ${bam_processed} ${TheDirectory} ${genomeLengths}
	</executable>
    </program>

    <inputs>
        <input name="bam_processed" required="true" description="The Bam file." />
    </inputs>

    <outputs>
        <output name="FeatureCounts" required="true" safeNaming="false" description="Histogram processes by pipeline" />
    </outputs>


    <arguments>
	<arg name="TheDirectory" required="true" description="Working Directory"/>
        <arg name="genepos" required="true" description="genome." />
        <arg name="rexec" required="true" description="genome." />
        <arg name="pipelineBase" required="true" description="genome." />
        <arg name="genomeLengths" required="true" description="genome." />
	<arg name="rlibs" required="true" description="pipeline base"/>
    </arguments>

</task:task>
